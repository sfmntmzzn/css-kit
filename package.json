{
  "name": "@sfm/css-kit",
  "version": "0.0.3",
  "description": "",
  "license": "MIT",
  "homepage": "https://github.com/sfmntmzzn/css-kit",
  "bugs": "https://github.com/sfmntmzzn/css-kit/issues",
  "repository": {
    "url": "https://github.com/sfmntmzzn/css-kit.git",
    "type": "git"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "style": "dist/css-kit.css",
  "sass": "src/index.scss",
  "scripts": {
    "build:clean": "rimraf ./dist/",
    "build:compile:main": "sass ./src/index.scss ./dist/css-kit.css --style=expanded",
    "build:compile:min": "sass ./src/index.scss ./dist/css-kit.min.css --style=compressed",
    "build:stats": "dist-size ./dist -e css",
    "build": "yarn build:clean && yarn build:compile:main && yarn build:compile:min && yarn build:stats"
  },
  "devDependencies": {
    "dist-size": "^0.4.0",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0"
  }
}
